<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
    http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="laporan_pendaftaran"
    pageWidth="595" pageHeight="842"
    columnWidth="555"
    leftMargin="20" rightMargin="20"
    topMargin="20" bottomMargin="20">

    <queryString>
        <![CDATA[
        SELECT p.nisn, p.nama_lengkap, p.jk, j.nama_jurusan, p.status
        FROM pendaftaran p
        JOIN jurusan j ON p.id_jurusan = j.id_jurusan
        ]]>
    </queryString>

    <field name="nisn" class="java.lang.String"/>
    <field name="nama_lengkap" class="java.lang.String"/>
    <field name="jk" class="java.lang.String"/>
    <field name="nama_jurusan" class="java.lang.String"/>
    <field name="status" class="java.lang.String"/>

    <!-- COLUMN HEADER -->
    <columnHeader>
        <band height="20">
            <staticText><reportElement x="0" y="0" width="100" height="20"/><text><![CDATA[NISN]]></text></staticText>
            <staticText><reportElement x="100" y="0" width="150" height="20"/><text><![CDATA[Nama]]></text></staticText>
            <staticText><reportElement x="250" y="0" width="60" height="20"/><text><![CDATA[JK]]></text></staticText>
            <staticText><reportElement x="310" y="0" width="120" height="20"/><text><![CDATA[Jurusan]]></text></staticText>
            <staticText><reportElement x="430" y="0" width="100" height="20"/><text><![CDATA[Status]]></text></staticText>
        </band>
    </columnHeader>

    <!-- DETAIL -->
    <detail>
        <band height="20">
            <textField><reportElement x="0" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{nisn}]]></textFieldExpression></textField>
            <textField><reportElement x="100" y="0" width="150" height="20"/><textFieldExpression><![CDATA[$F{nama_lengkap}]]></textFieldExpression></textField>
            <textField><reportElement x="250" y="0" width="60" height="20"/><textFieldExpression><![CDATA[$F{jk}]]></textFieldExpression></textField>
            <textField><reportElement x="310" y="0" width="120" height="20"/><textFieldExpression><![CDATA[$F{nama_jurusan}]]></textFieldExpression></textField>
            <textField><reportElement x="430" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{status}]]></textFieldExpression></textField>
        </band>
    </detail>

</jasperReport>
